import React, { useState, useEffect, useCallback } from 'react';
import { contratosService, pedidosService } from '../services/api';
import { useNotificaciones } from '../hooks/useNotificaciones';
import { AlertCircle, CheckCircle, XCircle, Package } from 'lucide-react';

const SolicitudPedido = () => {
  const [contratos, setContratos] = useState([]);
  const [contratoSeleccionado, setContratoSeleccionado] = useState(null);
  const [cantidad, setCantidad] = useState('');
  const [validacion, setValidacion] = useState(null);
  const [loading, setLoading] = useState(false);
  const { error: mostrarError, exito: mostrarExito } = useNotificaciones();

  const cargarContratos = useCallback(async () => {
    try {
      let response;
      try {
        response = await contratosService.getSaludContratos();
        setContratos(response.data);
      } catch (saludError) {
        console.warn('Endpoint /salud fall√≥, usando endpoint b√°sico:', saludError);
        
        // Usar endpoint b√°sico como alternativa
        response = await contratosService.getAll();
        const contratosConSalud = response.data.map(contrato => {
          const porcentaje_uso = contrato.tarjetas_emitidas > 0 
            ? ((contrato.tarjetas_activas / contrato.tarjetas_emitidas) * 100).toFixed(1)
            : 0;
          
          const tarjetas_permitidas = porcentaje_uso >= 70 
            ? Math.max(0, contrato.limite_contrato - contrato.tarjetas_emitidas)
            : 0;
          
          return {
            contrato_id: contrato.id,
            cliente: contrato.cliente_nombre,
            producto: contrato.producto_nombre,
            tarjetas_emitidas: contrato.tarjetas_emitidas,
            tarjetas_activas: contrato.tarjetas_activas,
            tarjetas_inactivas: contrato.tarjetas_inactivas,
            porcentaje_uso: parseFloat(porcentaje_uso),
            tarjetas_permitidas: tarjetas_permitidas
          };
        });
        
        setContratos(contratosConSalud);
      }
    } catch (error) {
      console.error('Error al cargar contratos:', error);
      // Solo mostrar error si realmente no se pueden cargar los datos
    }
  }, []);

  useEffect(() => {
    cargarContratos();
  }, [cargarContratos]);

  const handleValidar = async () => {
    if (!contratoSeleccionado || !cantidad) {
      mostrarError('Por favor selecciona un contrato y una cantidad');
      return;
    }

    const cantidadNum = parseInt(cantidad);
    if (isNaN(cantidadNum) || cantidadNum <= 0) {
      mostrarError('La cantidad debe ser un n√∫mero mayor a 0');
      return;
    }

    setLoading(true);
    try {
      const response = await pedidosService.validar(
        contratoSeleccionado.contrato_id,
        cantidadNum
      );
      setValidacion(response.data);
    } catch (error) {
      console.error('Error al validar pedido:', error);
      const errorMsg = error.response?.data?.error || 'Error al validar el pedido';
      mostrarError(errorMsg);
      setValidacion(null);
    } finally {
      setLoading(false);
    }
  };

  const handleSolicitar = async () => {
    if (!validacion || !validacion.puede_aprobar) {
      mostrarError('El pedido no cumple con los requisitos');
      return;
    }

    setLoading(true);
    try {
      await pedidosService.crear({
        contrato_id: contratoSeleccionado.contrato_id,
        cantidad: parseInt(cantidad),
      });
      mostrarExito('‚úÖ Pedido creado exitosamente');
      setValidacion(null);
      setCantidad('');
      setContratoSeleccionado(null);
    } catch (error) {
      console.error('Error al crear pedido:', error);
      mostrarError('Error al crear el pedido');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="p-6 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 min-h-screen">
      <div className="max-w-6xl mx-auto">
        {/* Header Profesional */}
        <div className="mb-8">
          <div className="flex items-center gap-4 mb-2">
            <div className="p-3 bg-gradient-to-r from-indigo-600 to-blue-600 rounded-2xl shadow-lg">
              <Package className="w-10 h-10 text-white" />
            </div>
            <div>
              <h1 className="text-4xl font-bold bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">
                Gesti√≥n de Pedidos
              </h1>
              <p className="text-gray-600 font-medium mt-1">
                SmartStock Pro ‚Ä¢ OneCard Edition ‚Ä¢ Solicitudes inteligentes
              </p>
            </div>
          </div>
        </div>

        {/* Selector de Contrato Profesional */}
        <div className="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 mb-8">
          <div className="flex items-center gap-4 mb-6">
            <div className="p-3 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-xl">
              <CheckCircle className="w-6 h-6 text-blue-600" />
            </div>
            <div>
              <h2 className="text-2xl font-bold text-gray-900">Selecci√≥n de Contrato</h2>
              <p className="text-gray-600 text-sm mt-1">Elige el contrato para gestionar tu solicitud</p>
            </div>
          </div>
          
          <div className="relative">
            <select
              value={contratoSeleccionado?.contrato_id || ''}
              onChange={(e) => {
                const contrato = contratos.find(c => c.contrato_id === parseInt(e.target.value));
                setContratoSeleccionado(contrato);
                setValidacion(null);
              }}
              className="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all duration-300 text-lg font-medium bg-white shadow-sm hover:border-gray-300"
            >
              <option value="">üéØ Selecciona un contrato para gestionar tu solicitud</option>
              {contratos.map((contrato) => {
                const statusEmoji = contrato.porcentaje_uso >= 70 ? '‚úÖ' : 
                                  contrato.porcentaje_uso >= 50 ? '‚ö†Ô∏è' : 'üö´';
                return (
                  <option key={contrato.contrato_id} value={contrato.contrato_id}>
                    {statusEmoji} {contrato.cliente} - {contrato.producto} (Utilizaci√≥n: {contrato.porcentaje_uso}%)
                  </option>
                );
              })}
            </select>
            <div className="absolute inset-y-0 right-0 flex items-center pr-6 pointer-events-none">
              <svg className="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>
        
          
          {contratos.length === 0 && (
            <div className="mt-6 p-6 bg-gradient-to-r from-amber-50 to-yellow-50 border border-amber-200 rounded-xl">
              <div className="flex items-center gap-3">
                <div className="animate-spin rounded-full h-6 w-6 border-b-2 border-amber-600"></div>
                <p className="text-amber-800 font-medium">
                  Cargando contratos disponibles...
                </p>
              </div>
            </div>
          )}
        </div>

        {/* Informaci√≥n del Contrato Seleccionado */}
        {contratoSeleccionado && (
          <div className="bg-gradient-to-br from-blue-50 to-indigo-50 p-8 rounded-2xl shadow-lg border border-blue-200 mb-8">
            <div className="flex items-center justify-between mb-6">
              <div className="flex items-center gap-4">
                <div className="p-3 bg-gradient-to-br from-blue-200 to-indigo-200 rounded-xl">
                  <AlertCircle className="w-7 h-7 text-blue-700" />
                </div>
                <div>
                  <h3 className="text-2xl font-bold text-blue-900">An√°lisis de Rendimiento</h3>
                  <p className="text-blue-600 text-sm mt-1">M√©tricas de utilizaci√≥n del contrato</p>
                </div>
              </div>
            <div className="flex items-center gap-2">
              <div className={`w-3 h-3 rounded-full ${
                contratoSeleccionado.porcentaje_uso >= 70 ? 'bg-green-500' :
                contratoSeleccionado.porcentaje_uso >= 50 ? 'bg-yellow-500' : 'bg-red-500'
              }`}></div>
              <span className="text-sm font-medium text-gray-600">
                {contratoSeleccionado.cliente}
              </span>
            </div>
          </div>
          
          <div className="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <div className="bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-sm border border-blue-100">
              <div className="flex items-center justify-between mb-3">
                <div className="text-sm font-semibold text-blue-600">Tarjetas Emitidas</div>
                <div className="p-2 bg-blue-100 rounded-lg">
                  <svg className="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4zM18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" />
                  </svg>
                </div>
              </div>
              <div className="text-3xl font-bold text-blue-900">
                {contratoSeleccionado.tarjetas_emitidas.toLocaleString()}
              </div>
              <div className="text-xs text-blue-600 mt-1">Total emitidas</div>
            </div>
            
            <div className="bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-sm border border-green-100">
              <div className="flex items-center justify-between mb-3">
                <div className="text-sm font-semibold text-green-600">Tarjetas Activas</div>
                <div className="p-2 bg-green-100 rounded-lg">
                  <CheckCircle className="w-4 h-4 text-green-600" />
                </div>
              </div>
              <div className="text-3xl font-bold text-green-700">
                {contratoSeleccionado.tarjetas_activas.toLocaleString()}
              </div>
              <div className="text-xs text-green-600 mt-1">En uso activo</div>
            </div>
            
            <div className="bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-sm border border-red-100">
              <div className="flex items-center justify-between mb-3">
                <div className="text-sm font-semibold text-red-600">Tarjetas Inactivas</div>
                <div className="p-2 bg-red-100 rounded-lg">
                  <XCircle className="w-4 h-4 text-red-600" />
                </div>
              </div>
              <div className="text-3xl font-bold text-red-700">
                {contratoSeleccionado.tarjetas_inactivas.toLocaleString()}
              </div>
              <div className="text-xs text-red-600 mt-1">Sin activar</div>
            </div>
            
            <div className="bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-sm border border-gray-100">
              <div className="flex items-center justify-between mb-3">
                <div className="text-sm font-semibold text-gray-600">Eficiencia</div>
                <div className="p-2 bg-gray-100 rounded-lg">
                  <AlertCircle className="w-4 h-4 text-gray-600" />
                </div>
              </div>
              <div className="flex items-end gap-2 mb-2">
                <div className="text-3xl font-bold text-gray-900">
                  {contratoSeleccionado.porcentaje_uso}%
                </div>
              </div>
              <div className="w-full bg-gray-200 rounded-full h-2">
                <div 
                  className={`h-2 rounded-full transition-all duration-700 ${
                    contratoSeleccionado.porcentaje_uso >= 70 ? 'bg-green-500' :
                    contratoSeleccionado.porcentaje_uso >= 50 ? 'bg-yellow-500' : 'bg-red-500'
                  }`}
                  style={{ width: `${Math.min(contratoSeleccionado.porcentaje_uso, 100)}%` }}
                ></div>
              </div>
            </div>
          </div>

          {contratoSeleccionado.porcentaje_uso < 70 && (
            <div className="bg-gradient-to-r from-red-50 to-orange-50 p-8 rounded-2xl border border-red-200 shadow-lg">
              <div className="flex items-start gap-4">
                <div className="p-4 bg-gradient-to-br from-red-100 to-red-200 rounded-2xl">
                  <AlertCircle className="w-8 h-8 text-red-600" />
                </div>
                <div className="flex-1">
                  <div className="font-bold text-red-900 text-xl mb-3">‚ö†Ô∏è Rendimiento Insuficiente</div>
                  <div className="text-red-700 mb-6 text-lg">
                    Utilizaci√≥n actual: <strong>{contratoSeleccionado.porcentaje_uso}%</strong>. 
                    Se requiere un m√≠nimo del <strong>70%</strong> para autorizar nuevas solicitudes.
                  </div>
                  <div className="bg-white/70 backdrop-blur-sm p-6 rounded-xl border border-red-200">
                    <div className="font-bold text-red-800 mb-4 text-lg">üí° Plan de Optimizaci√≥n:</div>
                    <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div className="flex items-center gap-3 text-red-700 font-medium">
                        <div className="w-3 h-3 bg-red-500 rounded-full flex-shrink-0"></div>
                        Activar {contratoSeleccionado.tarjetas_inactivas.toLocaleString()} tarjetas pendientes
                      </div>
                      <div className="flex items-center gap-3 text-red-700 font-medium">
                        <div className="w-3 h-3 bg-red-500 rounded-full flex-shrink-0"></div>
                        Revisar distribuci√≥n y reasignar
                      </div>
                      <div className="flex items-center gap-3 text-red-700 font-medium">
                        <div className="w-3 h-3 bg-red-500 rounded-full flex-shrink-0"></div>
                        Contactar gesti√≥n OneCard
                      </div>
                      <div className="flex items-center gap-3 text-red-700 font-medium">
                        <div className="w-3 h-3 bg-red-500 rounded-full flex-shrink-0"></div>
                        Optimizar uso actual
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      )}

      {/* Formulario de Cantidad Mejorado */}
      {contratoSeleccionado && (
        <div className="bg-gradient-to-br from-white to-gray-50 p-8 rounded-2xl shadow-xl border border-gray-200/50 mb-8">
          <div className="flex items-center gap-3 mb-6">
            <div className="p-2 bg-purple-100 rounded-lg">
              <svg className="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 110 2H3a1 1 0 110-2h4zM5 6h14l-1 14H6L5 6z" />
              </svg>
            </div>
            <h2 className="text-xl font-bold text-gray-800">Cantidad a Solicitar</h2>
          </div>
          
          <div className="space-y-6">
            <div>
              <label className="block text-sm font-semibold text-gray-700 mb-3">
                N√∫mero de tarjetas que necesitas
              </label>
              <div className="relative">
                <input
                  type="number"
                  value={cantidad}
                  onChange={(e) => {
                    setCantidad(e.target.value);
                    setValidacion(null);
                  }}
                  className="w-full px-6 py-4 text-xl font-semibold border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 bg-white shadow-sm"
                  placeholder="Ejemplo: 1,000"
                  min="1"
                  max="999999"
                />
                <div className="absolute inset-y-0 right-0 flex items-center pr-4">
                  <span className="text-gray-400 font-medium">tarjetas</span>
                </div>
              </div>
              
              {cantidad && (
                <div className="mt-3 flex items-center gap-2 text-sm">
                  <div className="w-2 h-2 bg-blue-500 rounded-full"></div>
                  <span className="text-gray-600">
                    Solicitando: <strong className="text-blue-600">{parseInt(cantidad || 0).toLocaleString()}</strong> tarjetas
                  </span>
                </div>
              )}
            </div>

            <div className="flex gap-4">
              <button
                onClick={handleValidar}
                disabled={loading || !cantidad || parseInt(cantidad) <= 0}
                className={`flex-1 py-4 px-6 rounded-xl font-bold text-lg transition-all duration-300 flex items-center justify-center gap-3 ${
                  loading ? 
                    'bg-gray-300 text-gray-500 cursor-not-allowed' :
                  !cantidad || parseInt(cantidad) <= 0 ?
                    'bg-gray-200 text-gray-400 cursor-not-allowed' :
                    'bg-gradient-to-r from-blue-600 to-indigo-600 text-white shadow-lg hover:shadow-xl hover:scale-105 active:scale-95'
                }`}
              >
                {loading ? (
                  <>
                    <svg className="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                      <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                      <path className="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Validando...</span>
                  </>
                ) : (
                  <>
                    <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>Validar Solicitud</span>
                  </>
                )}
              </button>
              
              {cantidad && (
                <button
                  onClick={() => {
                    setCantidad('');
                    setValidacion(null);
                  }}
                  className="px-6 py-4 bg-gray-100 text-gray-600 rounded-xl hover:bg-gray-200 transition-all duration-300 font-medium"
                >
                  Limpiar
                </button>
              )}
            </div>
            
            {contratoSeleccionado.porcentaje_uso >= 70 && (
              <div className="bg-green-50 p-4 rounded-xl border border-green-200">
                <div className="flex items-center gap-3">
                  <CheckCircle className="w-5 h-5 text-green-600" />
                  <div>
                    <div className="font-semibold text-green-800">‚úÖ Contrato Elegible</div>
                    <div className="text-sm text-green-700">
                      Este contrato cumple con los requisitos para solicitar nuevas tarjetas
                    </div>
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>
      )}

      {/* Resultado de Validaci√≥n Mejorado */}
      {validacion && (
        <div className={`p-8 rounded-2xl shadow-2xl border-2 transition-all duration-500 transform scale-100 ${
          validacion.puede_aprobar
            ? 'bg-gradient-to-br from-green-50 to-emerald-50 border-green-300'
            : 'bg-gradient-to-br from-red-50 to-pink-50 border-red-300'
        }`}>
          <div className="flex items-start gap-6">
            <div className={`p-4 rounded-2xl shadow-lg ${
              validacion.puede_aprobar 
                ? 'bg-green-200' 
                : 'bg-red-200'
            }`}>
              {validacion.puede_aprobar ? (
                <CheckCircle className="w-8 h-8 text-green-700" />
              ) : (
                <XCircle className="w-8 h-8 text-red-700" />
              )}
            </div>
            
            <div className="flex-1">
              <div className="flex items-center justify-between mb-4">
                <h3 className={`text-2xl font-bold flex items-center gap-3 ${
                  validacion.puede_aprobar ? 'text-green-900' : 'text-red-900'
                }`}>
                  {validacion.puede_aprobar ? '‚úÖ Solicitud Aprobada' : '‚ùå Solicitud Rechazada'}
                </h3>
                {validacion.puede_aprobar && (
                  <div className="flex items-center gap-2 px-4 py-2 bg-green-200 rounded-full">
                    <div className="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                    <span className="text-green-800 font-medium text-sm">Lista para procesar</span>
                  </div>
                )}
              </div>
              
              <div className={`text-lg mb-6 p-4 rounded-xl ${
                validacion.puede_aprobar 
                  ? 'bg-white/60 text-green-800 border border-green-200' 
                  : 'bg-white/60 text-red-800 border border-red-200'
              }`}>
                {validacion.razon}
              </div>

              {validacion.puede_aprobar && (
                <div className="space-y-6">
                  <div className="bg-white/80 p-6 rounded-xl border border-green-200">
                    <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                      <div className="text-center">
                        <div className="text-2xl font-bold text-green-700">
                          {parseInt(cantidad).toLocaleString()}
                        </div>
                        <div className="text-sm text-green-600">Solicitadas</div>
                      </div>
                      <div className="text-center">
                        <div className="text-2xl font-bold text-blue-700">
                          {validacion.tarjetas_permitidas?.toLocaleString() || 'N/A'}
                        </div>
                        <div className="text-sm text-blue-600">M√°ximo permitido</div>
                      </div>
                      <div className="text-center">
                        <div className={`text-2xl font-bold ${
                          parseInt(cantidad) <= (validacion.tarjetas_permitidas || 0) ? 'text-green-700' : 'text-orange-700'
                        }`}>
                          {parseInt(cantidad) <= (validacion.tarjetas_permitidas || 0) ? '‚úì' : '‚ö†Ô∏è'}
                        </div>
                        <div className="text-sm text-gray-600">Estado</div>
                      </div>
                    </div>
                  </div>
                  
                  <button
                    onClick={handleSolicitar}
                    disabled={loading}
                    className={`w-full py-4 px-8 rounded-xl font-bold text-lg transition-all duration-300 flex items-center justify-center gap-3 ${
                      loading
                        ? 'bg-gray-300 text-gray-500 cursor-not-allowed'
                        : 'bg-gradient-to-r from-green-600 to-emerald-600 text-white shadow-xl hover:shadow-2xl hover:scale-105 active:scale-95'
                    }`}
                  >
                    {loading ? (
                      <>
                        <svg className="animate-spin w-6 h-6" fill="none" viewBox="0 0 24 24">
                          <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                          <path className="opacity-75" fill="currentColor" d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                        <span>Procesando Pedido...</span>
                      </>
                    ) : (
                      <>
                        <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M5 13l4 4L19 7" />
                        </svg>
                        <span>Confirmar y Enviar Pedido</span>
                      </>
                    )}
                  </button>
                </div>
              )}
              
              {!validacion.puede_aprobar && (
                <div className="bg-white/80 p-6 rounded-xl border border-red-200">
                  <h4 className="font-semibold text-red-800 mb-3">üí° ¬øQu√© puedes hacer?</h4>
                  <div className="space-y-2 text-sm text-red-700">
                    <div className="flex items-center gap-2">
                      <span className="w-2 h-2 bg-red-500 rounded-full"></span>
                      Revisar el uso actual del contrato
                    </div>
                    <div className="flex items-center gap-2">
                      <span className="w-2 h-2 bg-red-500 rounded-full"></span>
                      Contactar al administrador del sistema
                    </div>
                    <div className="flex items-center gap-2">
                      <span className="w-2 h-2 bg-red-500 rounded-full"></span>
